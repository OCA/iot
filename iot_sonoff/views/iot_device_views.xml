<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="iot_device_form" model="ir.ui.view">
        <field name="name">iot.device.form</field>
        <field name="model">iot.device</field>
        <field name="inherit_id" ref="iot.iot_device_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="device_run_action" type="object" string="On"
                        attrs="{'invisible': ['|', ('is_sonoff', '=', False), ('state', '=', 'sonoff-on')]}"
                        context="{'iot_system_action_id': %(iot_sonoff.iot_sonoff_action_on)d}"
                />
                <button name="device_run_action" type="object" string="Off"
                        attrs="{'invisible': ['|', ('is_sonoff', '=', False), ('state', '=', 'sonoff-off')]}"
                        context="{'iot_system_action_id': %(iot_sonoff.iot_sonoff_action_off)d}"
                />
                <button name="device_run_action" type="object" string="Check"
                        attrs="{'invisible': [('is_sonoff', '=', False)]}"
                        context="{'iot_system_action_id': %(iot_sonoff.iot_sonoff_action_status)d}"
                />
            </header>
            <field name="system_id" position="after">
                <field name="is_sonoff" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="iot_device_kanban" model="ir.ui.view">
        <field name="name">iot.device.kanban</field>
        <field name="model">iot.device</field>
        <field name="inherit_id" ref="iot.iot_device_kanban"/>
        <field name="arch" type="xml">
            <field name="system_id" position="after">
                <field name="is_sonoff"/>
            </field>
            <xpath expr="//div[@id='actions']">
                <button t-if="record.state.raw_value === 'sonoff-off'" class="btn btn-danger" name="device_run_action" type="object"
                        context="{'iot_system_action_id': %(iot_sonoff.iot_sonoff_action_on)d}">Is Off</button>
                <button t-if="record.state.raw_value === 'sonoff-on'" class="btn btn-success" name="device_run_action" type="object"
                        context="{'iot_system_action_id': %(iot_sonoff.iot_sonoff_action_off)d}">Is On</button>
            </xpath>
        </field>
    </record>
</odoo>
